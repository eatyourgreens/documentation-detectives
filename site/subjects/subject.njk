---
layout: default
pagination:
  data: subjects
  size: 1
  alias: subject
permalink: "/subjects/{{ subject.id}}/"
---
<nav aria-label="Page navigation">
  <ol>
    <li>{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">Previous</a>{% else %}Previous{% endif %}</li>
    <li>{% if pagination.href.next %}<a href="{{ pagination.href.next }}">Next</a>{% else %}Next{% endif %}</li>
  </ol>
</nav>
<main class="subject">
    <h1>Subject {{ subject.id }}</h1>
    <div class="subjectGrid">
      {% for location in subjectLocations %}
      <img width=300 alt="{{location.alt}}" src="{{location.src}}" />
      {% endfor %}
      <section>
        <h2>Page transcription</h2>
        <div id="page-transcription"></div>
      </section>
      <section>
        <h2>Metadata</h2>
        <dl>
        {% for key, value in subject.metadata %}
          <dt>{{ key }}</dt>
          <dd>{{ value | dump }}</dd>
        {% endfor %}
        </dl>
      </section>
    </div>
    <nav aria-label="Page navigation">
      <ol>
        <li>{% if pagination.href.previous %}<a href="/read-davy-notebooks{{ pagination.href.previous }}">Previous</a>{% else %}Previous{% endif %}</li>
        <li>{% if pagination.href.next %}<a href="/read-davy-notebooks{{ pagination.href.next }}">Next</a>{% else %}Next{% endif %}</li>
      </ol>
    </nav>
    <script>
    console.log(fetchReductions({{workflowID}}, {{subject.id}}))
    </script>
</main>
